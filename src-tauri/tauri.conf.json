{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Oaken",
    "version": "0.0.2-alpha"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": "^file://.*"
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.holewinski.oaken",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Oaken",
        "width": 800,
        "height": 600
      }
    ]
  }
}
